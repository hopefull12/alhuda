<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="baseTile" template="/WEB-INF/homelayout.jsp">
		<put-attribute name="header" value="/WEB-INF/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/footer.jsp" />
	</definition>
	
	<definition name="homeTile" extends="baseTile">
		<put-attribute name="body" value="/WEB-INF/home.jsp" />
	</definition>	
	
	<definition name="donationTile" extends="baseTile">
		<put-attribute name="body" value="/WEB-INF/donationbuttons.jsp" />
	</definition>	
	
	<definition name="underConstructionTile" extends="baseTile">
		<put-attribute name="body" value="/WEB-INF/underConstruction.jsp" />
	</definition>	

</tiles-definitions>